    <div class="request-container">
        <div class="request-card__header">
            <h2>Requests</h2>
        </div>
        <% current_user.requests.each do |r| %>
            <div class="request-card">
                <div class="request-card__info-container">
                    <div class="request-card__image-container">
                        <%= link_to user_path(r.user) do %>
                            <% if r.photos.attached? %>
                                <%= cl_image_tag r.photos.first.key, class: "request-card__image" %>
                            <% end %>
                        <% end %>      
                    </div>
                    <div class="request-card__info">
                        <span><%= r.name %></span>
                        <span><%= r.address %></span>
                    </div>
                    <div class="request-card__description-container">
                        <span><%= r.body_part %></span>
                        <span><%= r.size %></span>
                        <span><%= r.style %></span>
                        <span><%= r.description %></span>
                    </div>
                    <div class="request-card__accept-container">
                        <div class="request-card__button--accept">
                            <span>Accept</span>
                        </div>
                        <div class="request-card__button--decline">
                            <span>Decline</span>
                        </div>
                        <div class="request-card__accept-info">
                            <span>Would you like to accept or decilne this offer?</span>
                        </div>
                    </div>
                </div>
            </div>
        <% end%>
    </div>