<% content_for :meta_title, "#{@user.nickname} • Artist page" %>
<% content_for :meta_description, @user.bio %>

<div class="container">
  <div class="artist-info">
    <div class="artist-main">
      <h2><%= @user.nickname %> ~ <%=  @user.style %> ~ <%= @user.city %></h2>
    </div>
    <div class="artist-details">
      <div class="details">
        <p><i class="fab fa-instagram"></i>  ‣  <%= @user.instagram %></p>
        <p><i class="fas fa-map-marker-alt"></i>  ‣  <%= @user.address %></p>
        <p><i class="fas fa-phone"></i>  ‣  <%= @user.phone_number %></p>
        <p><i class="far fa-lightbulb"></i>  ‣  <%= @user.inspiration %></p>
        <div class="bio">
          <p>Bio ‣</p>
          <div class="bio2"><p><%= @user.bio %></p></div>
        </div>
      </div>
      <div class="request-avatar">
        <% if current_user.avatar.present? %>
          <%= cl_image_tag @user.avatar.key, crop: :fill, class: "artist-avatar" %>
       <% else %>
          <img src="https://res.cloudinary.com/dimly1skf/image/upload/v1598905968/White-and-Red-Modern-Technology-Gaming-Logo_gjja8o_jkuqil.png" class="artist-avatar">
        <% end %>
       <%= link_to "Make a request",  new_user_request_path(@user, current_user), class: "btn from-center" %>
      </div>
    </div>
  </div>
  <div class="artist-portfolio">
    <% @user.photos.each do |p| %>
      <%= cl_image_tag p.key %>
    <% end %>
  </div>
</div>
