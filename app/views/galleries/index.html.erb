
<div class="container center">
  <h1>Welcome to the gallery</h1>
  <h3>Share your passion and love for tattoos with others</h3>
  <%= link_to "Upload a photo", new_gallery_path, class: "btn from-center home-send-button" %>
</div>


<div class="container">
  <div class="row">
    <% @galleries.each do |gallery| %>
      <div class="col-12 col-md-3">
        <div id="box" class="">
        <%= cl_image_tag gallery.photo.key, class: "w-100" %>
        </div>
        <%= gallery.description %>
      </div>
    <% end %>
  </div>

  <script type="text/javascript">
    const images = document.querySelectorAll("#box img");

    images.forEach(image => {
      image.addEventListener('click', () => {
        image.classList.toggle("explode");
        image.classList.toggle("w-100");
      });
    })
  </script>
</div>




